                <!--android:scaleType="centerCrop">-->
            <!--</ImageView>-->
        </LinearLayout>

    </LinearLayout>

    <!--drawer布局-->
    <!--也可以用listview,recyclerView-->
    <include layout="@layout/base_navigation"/>

</android.support.v4.widget.DrawerLayout>
